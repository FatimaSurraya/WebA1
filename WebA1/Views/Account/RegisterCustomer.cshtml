@model WebA1.Models.New_model.Customer
@{
    ViewBag.Title = "RegisterCustomer";
    Layout = null;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">

<h2 style="color:white">E-Commerce Website</h2>


<style>
    #box {
        border: 1px solid black;
        height: 100%;
    }

    body {
        background-image: url('../../content/images/login-bg.jpg');
        padding-top: 16px;
        background-size: auto;
        background-repeat: no-repeat;
        background-size: cover;
        overflow: hidden;
    }

    .insidebox {
        margin: 10% auto 10% auto;
        max-width: 500px;
        min-width: 200px;
        padding: 20px;
        border-radius: 10px;
        background-color: whitesmoke;
    }

    div h2 {
        text-align: center;
    }

    p#para {
        text-align: center;
        font-size: 14px;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col">
            <div class="insidebox">
                <h2 class="text-info" style="padding-top:20px;">Register Now</h2>
                <hr />
                @using (Ajax.BeginForm(new AjaxOptions { HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "msg", OnComplete = "clearAll" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row mb-2">
                        <div id="msg">

                        </div>
                    </div>
                    <div class="col-md-12" style="padding-top:10px;">
                        @Html.LabelFor(x => x.Customer_Id, new { @class = "form-label fs-4" })
                        @Html.TextBoxFor(x => x.Customer_Id, new { @class = "form-control fs-4" })
                        @Html.ValidationMessageFor(x => x.Customer_Id, "", new { @class = "text-danger" })
                    </div>


                    <div class="col-md-12" style="padding-top:10px;">
                        @Html.LabelFor(x => x.User_Name, new { @class = "form-label fs-4" })
                        @Html.TextBoxFor(x => x.User_Name, new { @class = "form-control fs-4" })
                        @Html.ValidationMessageFor(x => x.User_Name, "", new { @class = "text-danger" })
                    </div>


                    <div class="col-md-12" style="padding-top:10px;">
                        @Html.LabelFor(x => x.Email, new { @class = "form-label fs-4" })
                        @Html.TextBoxFor(x => x.Email, new { @class = "form-control fs-4", Type = "email" })
                        @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-12" style="padding-top:10px;">
                        @Html.LabelFor(x => x.Password, new { @class = "form-label fs-4" })
                        @Html.TextBoxFor(x => x.Password, new { @class = "form-control fs-4", Type = "password" })
                        @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                    </div>




                    <div class="col-md-12" style="padding-top:20px; padding-bottom:10px;">
                        <button type="submit" class="btn btn-success btn-lg col-12"><i class="fa-regular fa-floppy-disk fs-4"></i>Register</button>
                    </div>

                    <div class="form-group">
                        <p style="color:red">@ViewBag.error</p>
                        <p id="para">Already Have an Account? <a href="\Account\Login"> Login</a></p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
    <script src="~/Content/JS/jquery-3.6.0.js"></script>
    <script src="~/Content/JS/jquery.validate.js"></script>
    <script src="~/Content/JS/jquery.validate.unobtrusive.js"></script>
    <script src="~/Content/JS/jquery.unobtrusive-ajax.js"></script>
    <script>
        $("#form0").attr("enctype", "multipart/form-data")

        function clearAll() {
            $("#form0").trigger("reset");
        }</script>

}




