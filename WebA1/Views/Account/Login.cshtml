@model WebA1.Models.New_model.Customer
@{
    ViewBag.Title = "E-Commerce Website";
    Layout = null;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css" integrity="sha384-xOolHFLEh07PJGoPkLv1IbcEPTNtaed2xpHsD9ESMhqIYd0nLMwNLD69Npy4HI+N" crossorigin="anonymous">
<body class="img-responsive ">

    <h2 style="color:white">E-Commerce Website</h2>

    <style>
        #box {
            border: 1px solid black;
            height: 100%;
        }

        body {
            background-image: url('../../content/images/login-bg.jpg');
            padding-top: 16px;
            background-size: auto;
            background-repeat: no-repeat;
            background-size: cover;
            overflow: hidden;
        }

        .insidebox {
            margin: 10% auto 10% auto;
            max-width: 500px;
            min-width: 200px;
            padding: 20px;
            border-radius: 10px;
            background-color: whitesmoke;
        }

        div h2 {
            text-align: center;
        }

        p#para {
            text-align: center;
            font-size: 14px;
        }
    </style>

    <script src="http://code.jquery.com/jquery.js"></script>
    <div class="body" id="main-div">
        <div id="box" class="img-responsive">
            @using (@Html.BeginForm())
            {
                <div class="insidebox">
                    <div> <h2 class="text-info">Log In</h2></div>




                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                            @*<asp:TextBox ID="TextBox1" runat="server" class="form-control" placeholder="Username" required="required"></asp:TextBox>*@
                            @Html.TextBoxFor(x => x.User_Name, new { @class = "form-control", @placeholder = "Username" })

                        </div>
                        <span style="color:red">   @Html.ValidationMessageFor(x => x.User_Name) </span>

                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></div>
                            @*<asp:TextBox ID="txtpassword" runat="server" class="form-control" placeholder="Password" TextMode="Password" required="required"></asp:TextBox>*@
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control", @placeholder = "Password" })

                        </div>
                        <span style="color:red">   @Html.ValidationMessageFor(x => x.Password) </span>
                    </div>




                    <div class="form-group">
                        @*<asp:Button ID="Button1" runat="server" Text="Log In" class="form-control  btn-success" OnClick="Button1_Click" OnClientClick="retrun(passwordmatchfunc())" />*@
                        <input type="submit" value="Login" class="col-md-12 btn btn-success btn-Register" />

                    </div>

                    <div class="form-group">
                        <p style="color:red">@ViewBag.error</p>
                        <p id="para">Don't Have an Account? <a href="\Account\RegisterCustomer"> Register</a></p>
                    </div>



                </div>

            }
        </div>

    </div>
</body>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-Fy6S3B9q64WdZWQUiU+q4/2Lc9npb8tCaSX9FK7E8HnRr0Jz8D6OP9dO5Vg3Q9ct" crossorigin="anonymous"></script>
<script src="~/Scripts/jquery.validate-vsdoc.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script>
    ///// login click
    $("#btn_login").click(function () {
        var User_Name = $("#login_User_Name").val();
        var Password = $("#login_Password").val();

        if (User_Name == "") {
            alert("Please Enter Username")
            return;
        }

        $.ajax({
            url: '/Home/CreateLogin',
            method: 'post',
            traditional: true,
            data: { 'UserName': User_Name, 'Password': Password },
            success: Loginsuccess
        });
</script>
